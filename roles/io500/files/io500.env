DAOS_IO500_GLOBAL_DATADIR="/home/daos_admin/dfuse/io500-sc23/"
DAOS_IO500_GLOBAL_RESULTDIR="/home/daos_admin/io500-sc23/results"
DAOS_IO500_GLOBAL_DROP_CACHES=FALSE
DAOS_IO500_GLOBAL_VERBOSITY=1
DAOS_IO500_GLOBAL_SCC=FALSE

DAOS_IO500_IOR_EASY_OCLASS="SX"
DAOS_IO500_IOR_EASY_DIR_OCLASS="S1"
DAOS_IO500_IOR_EASY_TRANSFERSIZE="1m"
DAOS_IO500_IOR_EASY_BLOCKSIZE="99200000m"
DAOS_IO500_IOR_EASY_RUN=TRUE

DAOS_IO500_MDTEST_EASY_OCLASS="S1"
DAOS_IO500_MDTEST_EASY_DIR_OCLASS="SX"
DAOS_IO500_MDTEST_EASY_RUN=TRUE

DAOS_IO500_IOR_HARD_OCLASS="SX"
DAOS_IO500_IOR_HARD_DIR_OCLASS="S1"
DAOS_IO500_IOR_HARD_CHUNK_SIZE="470080"
DAOS_IO500_IOR_HARD_RUN=TRUE

DAOS_IO500_MDTEST_HARD_OCLASS="S1"
DAOS_IO500_MDTEST_HARD_DIR_OCLASS="SX"
DAOS_IO500_MDTEST_HARD_RUN=TRUE

DAOS_IO500_FIND_RUN=TRUE

DAOS_MPI_RUN_OPTS="--bind-to socket"
